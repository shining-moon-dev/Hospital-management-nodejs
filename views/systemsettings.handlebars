<link rel="stylesheet" href="/css/jquery.dataTables.min.css">

<!-- Diseases manager -->
<div class="col-md-6 col-lg-6">
    <!-- Add new disease -->
    <div class="row">
        <form action="/app/adddisease" method="post">
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Disease name</label>
                <div class="col-sm-9 col-md-9 col-lg-9">
                    <input class="form-control" style="width: 100%;" type="text" name="diseaseName" placeholder="Enter new disease name...">
                </div>
            </div>

            <!-- Last name input -->
            <div class="form-group row">
                <label class="col-sm-3 col-md-3 col-lg-3 col-form-label">Disease score</label>
                <div class="col-sm-9 col-md-9 col-lg-9">
                    <input class="form-control" style="width: 100%;" type="number" name="diseaseScore" placeholder="Enter new disease score...">
                </div>
            </div>

        	<input class="btn btn-success" style="float: right;" type="Submit" name="Submit" value="Add disease">
        </form>
    </div>


    <hr style="border-top: dotted 1px;" />

    <!-- Update current diseases -->
    <div class="row">
        <form action="/app/deletediseases" method="post">
            <table id="diseases-table" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <!-- JavaScript works here! -->
            </table>

            <input class="btn btn-danger" style="position: absolute; right: 0;" type="Submit" name="Submit" value="Delete diseases">
        </form>
    </div>

</div>

<script type="text/javascript" src="/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="/js/dataTables.bootstrap.min.js"></script>
<script type="text/javascript" src="/scripts/systemSettings.js"></script>
